mixin navbar(active)
  nav(class="navbar navbar-inverse navbar-default")
    .container-fluid
      // header (incl brand)
      .navbar-header
        button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
          span.sr-only. Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="")= title
      // end of header
      // nav menu
      div(id="navbar" class="collapse navbar-collapse")
        ul(class="nav navbar-nav")
          if active == 'search'
            li(class="active")
              a(href="/") Search
          else
            li
              a(href="/") Search
          if active =='ranking'
            li(class="active")
              a(href="/ranking") Ranking
          else
            li
              a(href="/ranking") Ranking
          if active == 'labeled'
            li(class='active')
              a(href="/labeled") Labeled
          else
            li
              a(href="/labeled") Labeled
          if active == 'export'
            li(class='active')
              a(href="/data") Export
          else
            li
              a(href="/data") Export
        ul(class="nav navbar-nav navbar-right")
          li
            div(class="btn-group btn-group btn-group-lg" style="padding-right: 10px;" data-toggle="buttons" id="autoranking")
              if !autorank
                label(class="btn btn-default active") Manual
                  input(type="radio" name="options" data-label=0 autocomplete="off")
              else
                label(class="btn btn-default") Manual
                  input(type="radio" name="options" data-label=0 autocomplete="off")
              if autorank
                label(class="btn btn-default active") AutoRank
                  input(type="radio" name="options" data-label=1 autocomplete="off")
              else
                label(class="btn btn-default") AutoRank
                  input(type="radio" name="options" data-label=1 autocomplete="off")
          li
            input(class="btn btn-primary btn-lg" type="button" value="ReRank" id="rerank" data-loading-text="Ranking...")
      // end of nav menu
    // end of container
  // end of nav

doctype html
html(lang="en")
html
  head
    title= title
    script(src="https://code.jquery.com/jquery-2.2.4.min.js"   integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="   crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/jquery.twbsPagination.min.js')
    script(src='/javascripts/uri.js')
  body
    +navbar(subtitle)
    block body-content
